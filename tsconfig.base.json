{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@anton-suite/anton-sdk": ["libs/anton-sdk/src/index.ts"],
      "@anton-suite/api-interface": ["libs/api-interface/src/index.ts"],
      "@anton-suite/my-plugin": ["tools/my-plugin/src/index.ts"],
      "@anton-suite/ui-shadcn": ["libs/ui-shadcn/src/index.ts"],
      "@anton-suite/ui-shadcn/*": ["libs/ui-shadcn/src/*"],
      "@anton-suite/utils-general": ["libs/utils-general/src/index.ts"],
      "@anton-suite/utils-logger": ["libs/utils-logger/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
